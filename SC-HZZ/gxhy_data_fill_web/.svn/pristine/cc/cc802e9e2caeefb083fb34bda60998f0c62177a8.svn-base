#rivertable tbody  tr td,#rivertable thead  tr th{
	width:12%;
	text-align:center;
	vertical-align:middle;
}
#rivertable tbody  tr{
	height:30px;
	line-height: 30px;
}
#rivertable thead  tr{
	height:30px;
	line-height: 30px;
	background:#bfe9fc;
    color: #000;
    text-transform: uppercase;
}
caption{
	background:#369cdc;
    color: #ffffff;
    text-transform: uppercase;
    border:none;
    font-size:18px;
}
#rivertable{
	margin:0px 10px;
	margin:0px 10px;
	border-collapse:collapse;
	border-spacing:0;
	border-left:1px solid #888;
	border-top:1px solid #888;
}
#rivertable th,#rivertable td{
	border-right:1px solid #888;
	border-bottom:1px solid #888;
}
#rivertable th{
	font-weight:bold;
}
#rivertable thead,#rivertable tbody tr{
    display:table;width:100%;table-layout:fixed;
}
#riverbody::-webkit-scrollbar {
    width: 6px;
    background-color: #eee;
}

#riverbody::-webkit-scrollbar-track {
    background-color: #eee;
}

#riverbody::-webkit-scrollbar-thumb {
    background:#369cdc;
}
